{
  "expo": {
    "name": "Lovii",
    "slug": "lovii",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/lovii-logo.png",
    "scheme": "lovii",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dtechoracle.lovii",
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.dtechoracle.lovii"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/lovii-logo.png",
        "backgroundImage": "./assets/images/lovii-logo.png",
        "monochromeImage": "./assets/images/lovii-logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.dtechoracle.lovii"
    },
    "web": {
      "output": "server",
      "bundler": "metro",
      "favicon": "./assets/images/lovii-logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/lovii-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "LoviiWidget",
              "label": "Partner Note",
              "minWidth": 320,
              "minHeight": 120,
              "description": "See your partner's latest note",
              "previewImage": "./assets/images/widget-preview.jpg"
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "apiUrl": "https://lovii-backend.onrender.com/api",
      "eas": {
        "projectId": "78bbaad6-861d-42b6-bf92-a44827c93477"
      }
    },
    "owner": "dtechoracle1"
  }
}