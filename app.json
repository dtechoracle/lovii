{
  "expo": {
    "name": "lovii",
    "slug": "lovii",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lovii",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dtechoracle.lovii",
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.dtechoracle.lovii"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.dtechoracle.lovii"
    },
    "web": {
      "output": "static",
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png",
      "plugins": [
        "expo-router",
        [
          "expo-splash-screen",
          {
            "image": "./assets/images/splash-icon.png",
            "imageWidth": 200,
            "resizeMode": "contain",
            "backgroundColor": "#ffffff",
            "dark": {
              "backgroundColor": "#000000"
            }
          }
        ],
        [
          "react-native-widget-extension",
          {
            "widgetsFolder": "widgets",
            "deploymentTarget": "14.0",
            "frequentUpdates": true,
            "ios": {
              "src": "widgets/ios",
              "mode": "production",
              "devTeamId": "",
              "appleTeamId": "",
              "deploymentTarget": "14.0"
            },
            "android": {
              "src": "widgets/android",
              "widgets": [
                {
                  "name": "LoviiWidget",
                  "label": "Partner's Note",
                  "description": "See your partner's latest note",
                  "minWidth": "2x2",
                  "maxWidth": "4x4",
                  "minHeight": "2x2",
                  "maxHeight": "4x4",
                  "previewImage": "./assets/images/widget-preview.png"
                }
              ]
            }
          }
        ]
      ],
      "experiments": {
        "typedRoutes": true,
        "reactCompiler": true
      },
      "extra": {
        "router": {},
        "eas": {
          "build": {
            "experimental": {
              "ios": {
                "appExtensions": [
                  {
                    "targetName": "loviiWidgets",
                    "bundleIdentifier": "com.dtechoracle.lovii.loviiWidgets",
                    "entitlements": {}
                  }
                ]
              }
            }
          },
          "projectId": "a0a03da8-f568-4d1d-b878-3ed96319155d"
        }
      }
    },
    "extra": {
      "eas": {
        "projectId": "a0a03da8-f568-4d1d-b878-3ed96319155d"
      }
    }
  }
}
